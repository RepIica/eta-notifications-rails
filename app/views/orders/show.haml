%h2= @order.customer_name

.row
  .col-md-2.strong
    Phone Number:
  .col-md-10
    = @order.phone_number

.row
  .col-md-2.strong
    Status:
  .col-md-10
    - if @order.ready?
      %span.label.label-default Ready
    - if @order.shipped?
      %span.label.label-info Shipped
    - if @order.dropped_off?
      %span.label.label-success Delivered

.row
  .col-md-12.top-buffer
    = link_to "Pick up the package", initial_notifications_path(@order), { class: "btn btn btn-info btn-full-width", method: :post }
.row
  .col-md-12.top-buffer
    = link_to "Delivering the package", delivery_notifications_path(@order), { class: "btn btn btn-primary btn-full-width", method: :post }

.row
  .col-md-12.top-buffer
    = link_to 'Back to orders', orders_path, { class: "btn btn-xs btn-default" }
